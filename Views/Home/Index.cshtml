@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>


<div class="container">
    <div class="row">
        <div class="col-2">
            <br />
            <br />
            <br />
            <h5>Filter by Team:</h5>
            @foreach (Team t in ViewBag.Teams)
            {
                <a class="btn btn-primary" asp-route-id="@t.TeamID">@t.TeamName</a>
            }
        </div>

        <div class="col">
            <h1>@ViewBag.SelectedTeam:</h1>
            <table asp-model class="table table-bordered table-striped">

                <thead class="font-weight-bold">
                    <tr>
                        <td>First Name</td>
                        <td>Middle Initial</td>
                        <td>Last Name</td>
                        <td>Address</td>
                        <td>City</td>
                        <td>State</td>
                        <td>Zip</td>
                        <td>Phone Number</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.BowlerFirstName</td>
                            <td>@b.BowlerMiddleInit</td>
                            <td>@b.BowlerLastName</td>
                            <td>@b.BowlerAddress</td>
                            <td>@b.BowlerCity</td>
                            <td>@b.BowlerState</td>
                            <td>@b.BowlerZip</td>
                            <td>@b.BowlerPhoneNumber</td>
                            @*<td>@b.TeamId</td>*@
                            <td><a class="button button primary" asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID">Edit</a></td>
                            <td><a class="button button primary" asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
