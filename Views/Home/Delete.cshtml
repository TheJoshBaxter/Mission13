@{
    ViewData["Title"] = "Delete Bowler";
}

@model Bowler

<h2>Confirm Deletion</h2>
<h3>Are you SURE you want to delete the record for @Model.BowlerFirstName @Model.BowlerLastName?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <button><a asp-controller="Home" asp-action="Index">Cancel</a></button>

    <input type="hidden" asp-for="BowlerID" />
</form>